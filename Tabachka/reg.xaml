<Window x:Class="Tabachka.reg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Tabachka"
        mc:Ignorable="d"
        Title="reg" Height="450" Width="800">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="Purple" Offset="0"/>
            <GradientStop Color="MediumPurple" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <TextBox x:Name="loginTbx" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" materialDesign:HintAssist.Hint="Логин" VerticalAlignment="Top" Width="780" FontSize="36" Foreground="White"/>
        <PasswordBox x:Name="passwordTbx" HorizontalAlignment="Center" Margin="0,72,0,0"  materialDesign:HintAssist.Hint="Пароль" VerticalAlignment="Top" Width="780" FontSize="36" Foreground="White"/>
        <Button x:Name="bt_avt" Content="Авторизоваться" HorizontalAlignment="Center" Margin="0,301,0,0" VerticalAlignment="Top" Height="85" Width="310" FontSize="36" Click="bt_avt_Click"/>
    </Grid>

</Window>
